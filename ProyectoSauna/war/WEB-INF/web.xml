<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>ProyectoSauna</servlet-name>
		<servlet-class>sauna.ProyectoSaunaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProyectoSauna</servlet-name>
		<url-pattern>/servlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ProyectoSauna</servlet-name>
		<servlet-class>sauna.GmailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProyectoSauna</servlet-name>
		<url-pattern>/gmail</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Vista</servlet-name>
		<servlet-class>sauna.Vistas</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Vista</servlet-name>
		<url-pattern>/vistas</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
